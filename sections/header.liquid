<header class="header">
    <h1> {{ shop.name }} </h1>

    <ul>
        {% for link in linklists.main-menu.links -%}
            <li> {{ link.title | link_to: link.url }}</li>
        {%- endfor %}
    </ul>
    {% if settings.show_search %}
        <form action="search">
            <input type="search" name="q" value="{{ search.terms | escape }}"/>
            <button type="submit">Search</button>
        </form>
    {%endif%}
</header>

<style>
    .header{
        background-color: {{section.settings.bg}}
    }

</style>

{%stylesheet%}
.header{
    padding: 20px;
}
{%endstylesheet%}

{%javascript%}
console.log('hey')
{%endjavascript%}

{% schema%}
{
    "name": "Header",
    "settings": [
            {
                "type": "checkbox",
                "id": "show_search",
                "label": "Show Search form?"
            },
            {
                "type": "color",
                "id": "bg",
                "label": "Background Color"
            }
           
        ]
}

{%endschema%}